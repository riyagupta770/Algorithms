n = int(input("enter no:"))
temp=n
rev=0
while(n>0):
    dig=n%10
    rev=rev*10+dig
    n=n//10
if(temp==rev):
    print("the no is a palindrome")
else:
    print("the no is not a palindrome")
    
    
    
    
    
    def Palindrome(ar):
    for i in range(0,int(len(ar)/2)):
        if ar[i] != ar[len(ar)-1-i]:
            return False
    return True

ar = [1,2,3,4,2,1]

print(Palindrome(ar))
